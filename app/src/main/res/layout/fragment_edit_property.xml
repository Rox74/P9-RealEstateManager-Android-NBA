<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle">

        <!-- Type de propriété (Obligatoire) -->
        <EditText
            android:id="@+id/edit_text_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="* Type of Property"
            android:inputType="textCapWords" />

        <!-- Prix (Obligatoire) -->
        <EditText
            android:id="@+id/edit_text_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="* Price ($)"
            android:inputType="numberDecimal" />

        <!-- Surface (Obligatoire) -->
        <EditText
            android:id="@+id/edit_text_surface"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="* Surface (m²)"
            android:inputType="numberDecimal" />

        <!-- Nombre de pièces (Optionnel) -->
        <EditText
            android:id="@+id/edit_text_rooms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Number of Rooms"
            android:inputType="number" />

        <!-- Nombre de salles de bains (Optionnel) -->
        <EditText
            android:id="@+id/edit_text_bathrooms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Number of Bathrooms"
            android:inputType="number" />

        <!-- Nombre de chambres (Optionnel) -->
        <EditText
            android:id="@+id/edit_text_bedrooms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Number of Bedrooms"
            android:inputType="number" />

        <!-- Description (Optionnelle) -->
        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:minLines="3" />

        <!-- Adresse complète -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Rue (Obligatoire) -->
        <EditText
            android:id="@+id/edit_text_street"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="* Street Address"
            android:inputType="textCapWords" />

        <!-- Ville (Obligatoire) -->
        <EditText
            android:id="@+id/edit_text_city"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="* City"
            android:inputType="textCapWords" />

        <!-- État (Optionnel) -->
        <EditText
            android:id="@+id/edit_text_state"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="State"
            android:inputType="textCapWords" />

        <!-- Code postal (Optionnel) -->
        <EditText
            android:id="@+id/edit_text_zip_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Zip Code"
            android:inputType="number" />

        <!-- Pays (Optionnel) -->
        <EditText
            android:id="@+id/edit_text_country"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Country"
            android:inputType="textCapWords" />

        <!-- Agent immobilier (Obligatoire) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_text_agent_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="* Agent Name"
            android:inputType="textCapWords" />

        <!-- Statut du bien -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Status"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <Switch
                android:id="@+id/switch_property_status"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sold"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Date d'entrée sur le marché -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Market Date"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/button_select_market_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Market Date" />

        <TextView
            android:id="@+id/text_selected_market_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No date selected"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Date de vente (Visible uniquement si vendu) -->
        <LinearLayout
            android:id="@+id/layout_sold_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sold Date"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/button_select_sold_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Sold Date" />

            <TextView
                android:id="@+id/text_selected_sold_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No date selected"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="center"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Photos -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photos (Optional)"
            android:textStyle="bold"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_photos"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/button_add_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photo" />

        <!-- Points d'intérêt -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points of Interest (Optional)"
            android:textStyle="bold"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_points_of_interest"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical" />

        <Button
            android:id="@+id/button_add_point_of_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Point of Interest" />

        <!-- Bouton de mise à jour -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Property"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>