<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- État sélectionné -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#d0e8f2" /> <!-- Bleu clair -->
            <stroke
                android:width="1dp"
                android:color="#d3d3d3" /> <!-- Contour gris clair -->
        </shape>
    </item>

    <!-- État par défaut -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#d3d3d3" />
        </shape>
    </item>

</selector>