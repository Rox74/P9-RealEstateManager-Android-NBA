<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Min Price -->
        <EditText
            android:id="@+id/edit_text_min_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Min Price ($)"
            android:inputType="numberSigned|numberDecimal" />

        <!-- Max Price -->
        <EditText
            android:id="@+id/edit_text_max_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Max Price ($)"
            android:inputType="numberSigned|numberDecimal" />

        <!-- Min Surface -->
        <EditText
            android:id="@+id/edit_text_min_surface"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Min Surface (m²)"
            android:inputType="numberSigned|numberDecimal" />

        <!-- Max Surface -->
        <EditText
            android:id="@+id/edit_text_max_surface"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Max Surface (m²)"
            android:inputType="numberSigned|numberDecimal" />

        <!-- Min Rooms -->
        <EditText
            android:id="@+id/edit_text_min_rooms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Min Rooms"
            android:inputType="number" />

        <!-- Min Photos -->
        <EditText
            android:id="@+id/edit_text_min_photos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Min Photos"
            android:inputType="number" />

        <!-- Location -->
        <EditText
            android:id="@+id/edit_text_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Location (City, State)"
            android:inputType="text" />

        <!-- Button Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Search Button -->
            <Button
                android:id="@+id/button_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>